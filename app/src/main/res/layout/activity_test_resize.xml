<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <LinearLayout
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:layout_width="match_parent"
            android:layout_height="340px"
            android:background="@drawable/toka_info_top_bg"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130px">

                <ImageView
                    android:src="#000000"
                    android:id="@+id/civ_icon"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dip" />

                <TextView
                    android:id="@+id/tvTokaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/civ_icon"
                    android:text="----"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTokaName"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/civ_icon"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivChain"
                        android:layout_width="13dip"
                        android:layout_height="13dip"
                        android:src="#000000" />

                    <TextView
                        android:id="@+id/tvChain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:text="----"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvApply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/toka_chain_apply_btn_bg"
                        android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="3dip"
                        android:text="申请"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>
                <TextView
                    android:background="@drawable/corner16dp_whiteline"
                    android:textColor="#ffffff"
                    android:text="关注"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_follow"
                    android:layout_width="140px"
                    android:layout_height="54px" />
            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="270px"
            >

            <LinearLayout
                android:paddingBottom="40px"
                android:paddingLeft="24px"
                android:paddingRight="24px"
                android:paddingTop="35px"
                android:id="@+id/llExpand"
                android:layout_width="702px"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dip"
                            android:text="发行人"
                            android:textColor="#959595"
                            android:textSize="13sp" />
                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView

                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="----"
                                android:textColor="#333333"
                                android:textSize="15sp" />
                            <TextView
                                android:gravity="center"
                                android:id="@+id/tv_showInfo"
                                android:textColor="#fe5400"
                                android:textSize="22px"
                                android:text="查看"
                                android:layout_marginLeft="20px"
                                android:background="@drawable/corner16dp_bgnone"
                                android:layout_width="82px"
                                android:layout_height="34px" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dip"
                            android:text="发行总量"
                            android:textColor="#959595"
                            android:textSize="13sp"/>

                        <TextView
                            android:layout_marginTop="6dp"
                            android:id="@+id/tvAllAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="21dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dip"
                            android:text="发行人持有量"
                            android:textColor="#959595"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvHoldAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="----"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="回收量"
                                android:textColor="#959595"
                                android:textSize="13sp" />
                            <TextView
                                android:id="@+id/tvRecycleTips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="----"
                                android:textColor="#fe5400"
                                android:textSize="13sp" />

                            <ImageView
                                android:id="@+id/ivQuestionMark"
                                android:layout_width="15dip"
                                android:layout_height="15dip"
                                android:layout_marginLeft="5dip"
                                android:src="#000000" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvRecycleAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="----"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDesc"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用途:"
                        android:textColor="#959595"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tvTokaDesc"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="这里是自适配Demo"
                        android:textColor="#333333"
                        android:textSize="24px" />

                    <ImageView
                        android:id="@+id/ivArrow"
                        android:layout_width="15px"
                        android:layout_height="15px"
                        android:layout_marginTop="2dip"
                        android:src="#000000" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="#ffffff">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_buy"
                        android:textColor="#fe5400"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        android:text="我要买入TOKA"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_sell"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="我要卖出TOKA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dip"
                android:paddingTop="6dip">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="REDZ/TOKA"
                    android:textColor="#666666"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="数量(TOKA)"
                    android:textColor="#666666"
                    android:textSize="10sp" />


                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="发布者ID"
                    android:textColor="#666666"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="操作"
                    android:textColor="#666666"
                    android:textSize="10sp" />


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_trade"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:id="@+id/tvPublish"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:background="@drawable/corner16dp_bggradient"
                android:gravity="center"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="发布求购信息"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>