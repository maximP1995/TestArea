<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center|top"
        android:background="@drawable/corner16dp_bgwhite"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="233dp">
        <TextView
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="#232323"
            android:textStyle="bold"
            android:text="您是否把本项目上链到以太坊？"
            android:layout_width="218dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:layout_width="218dp"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#333333"
            android:lineSpacingExtra="5dp"
            android:text="请您确认您所填写的项目信息，一旦上架，本项目的标题，描述，单价，份数不可更改，以及本项目将无法删除及下架，是否继续？"
            android:layout_marginTop="17dp"
            android:layout_width="218dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="上链到以太坊将消耗55REDZ币"
            android:layout_marginTop="25dp"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:gravity="center"
            android:text="确认上架"
            android:layout_marginTop="15dp"
            android:background="@drawable/corner16dp_bggradient"
            android:layout_width="150dp"
            android:layout_height="30dp" />
    </LinearLayout>
</FrameLayout>